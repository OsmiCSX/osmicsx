{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react-native"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
